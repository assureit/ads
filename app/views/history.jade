extends layout
block script
    script(type='text/javascript').
        $(function(){
            var list = new HistoryView();
            list.addElements(#{caseId});
        });
block append content
    script#history_tmpl(type="text/x-jquery-tmpl")
        li.media(style='list-style: none')
            img.media-object.pull-left(data-src="holder.js/64x64",alt="64x64",style="width: 64px; height: 64px;",src="data:image/png;base64,")
            .media-body
                p
                    a(href='#{basepath}/case/${caseId}/history/${revisionId}') ${Message}
                    span.pull-right
                        i.icon-sitemap
                        | 0&nbsp;
                small
                    |${userName} updated 
                    span ${dateTime}
block bar
    a(href="#{basepath}/")
        img#menu-button(src="#{basepath}/images/ait.png") Menu
    .menu
        ul#drop-menu
            if userName
                li#monitors-menu
                    a(href='#') Monitors
                li#settings-menu
                    a(href='#') Settings
                include signout
            else
                include signin
block content
    #dcase-manager.container-fluid
        .row
            #select-history.span6.offset2
                h2 History&nbsp;
                hr
                #history-list
