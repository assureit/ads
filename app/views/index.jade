                            ul.dropdown-menu
                                li
                                    a#menu-undo(href="#")= lang.undo
                                li
                                    a#menu-redo(href="#")= lang.redo
                           li.dropdown.ase-edit-menu.ase-view-menu
                               a.dropdown-toggle(data-toggle="dropdown", href="#")= lang.export
                                   b.caret
                               ul.dropdown-menu
                                   li
                                       a#menu-export-json(href="#")= lang.JSON
                                   li
                                       a#menu-export-png(href="#")= lang.PNG
