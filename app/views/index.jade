                block sign
block content
    #ase.container
        img#ase-logo(src="images/assuranceDS.png")
        #viewer(style="display: none;")
        #dcase-manager.container-fluid(style="display: none;")
            .row-fluid
                .span6
                    h2= lang.new_DCase
                    form.form-horizontal
                        .control-group#newdcase-name
                            label.control-label(for="inputDCaseName")= lang.DCase_name
                            .controls
                                input#inputDCaseName(type="text", id="inputDCaseName")
                        .control-group#newdcase-desc
                            label.control-label(for="inputDesc")= lang.topgoal
                            .controls
                                textarea#inputDesc(rows=5)
                        .control-group
                            .controls
                                button.btn#dcase-create(type="button")= lang.create
                .span6
                    h2 DCaseを選択
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th= lang.DCase_name
                                th= lang.creater
                                th= lang.last_commit
                                th= lang.last_commiter
                                th Edit
                                th Delete
                        tbody#dcase-select-table
            .dropdown#edit-menulist(style="display: none;")
                a.dropdown-toggle(data-toggle="dropdown", href="#")
                    i.icon-list
                ul.dropdown-menu
                    li
                        a#ml-cut(href="#")= lang.cut
                    li
                        a#ml-copy(href="#")= lang.copy
                    li
                        a#ml-paste(href="#")= lang.paste
                    li
                        a#ml-delete(href="#")= lang.delete
                    li.divider
                    li
                        a#ml-openall(href="#")= lang.openall
                    li
                        a#ml-closeall(href="#")= lang.closeall
                    li.divider
                    li.dropdown-submenu
                        a(tabindex="-1", href="#")= lang.export
                        ul.dropdown-menu
                            li
                                a#ml-export-json(href="#") JSON
                            li
                                a#ml-export-png(href="#") PNG
                            li
                                a#ml-export-pdf(href="#") PDF
                            li
                                a#ml-export-dscript(href="#") D-Script
            table#edit-newnode(style="display: none;")
                    tr
                        td(width="80")
                            ul.nav.nav-list(style="min-height: 100px;")
                        td(width="200")
                            textarea(style="margin: 0px; padding: 0px; width: 100%; height: 100%;")
block svg
    svg(width="0", height="0")
        defs
            marker#Triangle-black(viewBox="0 0 10 10", refX="10", refY="5", markerUnits="strokeWidth", markerWidth="15", markerHeight="9", orient="auto")
                path(d="M 0 0 L 10 5 L 0 10 z", fill="gray", stroke="gray")
