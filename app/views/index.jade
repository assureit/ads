                            li.dropdown.ase-edit-menu.ase-view-menu
                                a.dropdown-toggle(data-toggle="dropdown", href="#")= lang.config
                                    b.caret
                                ul.dropdown-menu
                                    li.dropdown-submenu
                                        a(href="#")= lang.Theme
                                        ul#menu-change-theme.dropdown-menu
                                    li.dropdown-submenu
                                        a(href="#")= lang.Language
                                        ul#lang-theme.dropdown-menu
                                            li
                                                a#lang-select-english(href="#")= lang.English
                                            li
